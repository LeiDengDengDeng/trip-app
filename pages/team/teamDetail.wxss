.slide-image {
  width: 100%;
  height: 150px;
}

.content{
  margin:20px;
  font-size: 13px;
  display: flex;
  flex-direction: column;
}
.content .row {
  margin: 8rpx 0;
  display: flex;
  flex-direction: row;
}
.content .spotlink{
  display: flex;
  flex-direction: row;
}
.content .scene{
  margin-left:5px;
  font-size: 11px;
  color: #f4c23c
}
.content .money{
  color:#f4c23c;
}
.content .title{
  font-size:15pt;
}
.content .description{
  margin-top: 10px;
  font-size:13px;
  color: #888
}
.row-hover {
  background-color: rgb(216, 213, 213);
}


.btn{
  margin-top:8px;
  width:95%;
  font-size: 15px;
  color: white;
}
.join{
  background-color:  #f4c23c;
}
.quit{
  background-color: #ed3f14;
}
.vertical-middle {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

