/* pages/spot/spotDetail.wxss */

.slide-image {
  width: 100%;
  height: 150px;
}

.content {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

.content .title {
  font-size: 18pt;
}

.content .row {
  margin: 8rpx 0;
  display: flex;
  flex-direction: row;
}

.row-hover {
  background-color: rgb(216, 213, 213);
}

.content .rate {
  margin: 0 !important;
  padding: 0;
  height: 14px;
}

.content .rate text{
  margin-left: 15px;
  font-size: 11px;
  color: #888888;
  display: flex;
  align-items: center;
}


@font-face {
  font-family: 'iconfont';  /* project id 1000160 */
  src: url('//at.alicdn.com/t/font_1000160_452epjn9iac.eot');
  src: url('//at.alicdn.com/t/font_1000160_452epjn9iac.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_1000160_452epjn9iac.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_1000160_452epjn9iac.woff') format('woff'),
  url('//at.alicdn.com/t/font_1000160_452epjn9iac.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_1000160_452epjn9iac.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 14px;
  font-style: normal;
  padding: 0;
  margin-right: 1px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-iconstar::before {
  color: rgb(255, 146, 0);
  content: "\e60b";
}

.icon-iconstar-empty::before {
  color: rgb(233, 233, 233);
  content: "\e60b";
}

.icon-iconstar-half::before {
  color: rgb(255, 146, 0);
  content: "\e7b3";
}

.icon-loc::before {
  content: "\e600";
}

.icon-right::before {
  content: "\e60c";
}