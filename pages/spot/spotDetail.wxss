/* pages/spot/spotDetail.wxss */

.slide-image {
  width: 100%;
  height: 150px;
}

.content {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

.content .title {
  font-size: 18pt;
}

.content .row {
  margin: 8rpx 0;
  display: flex;
  flex-direction: row;
}

.row-hover {
  background-color: rgb(216, 213, 213);
}

.content .rate {
  margin: 0 !important;
  padding: 0;
  height: 14px;
}

.content .rate text {
  margin-left: 15px;
  font-size: 11px;
  color: #888;
  display: flex;
  align-items: center;
}

.vertical-middle {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

@font-face {
  font-family: 'iconfont';  /* project id 1000160 */
  src: url('//at.alicdn.com/t/font_1000160_zf54kjdw398.eot');
  src: url('//at.alicdn.com/t/font_1000160_zf54kjdw398.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_1000160_zf54kjdw398.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_1000160_zf54kjdw398.woff') format('woff'),
  url('//at.alicdn.com/t/font_1000160_zf54kjdw398.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_1000160_zf54kjdw398.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 14px;
  font-style: normal;
  padding: 0;
  margin-right: 1px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-iconstar::before {
  color: rgb(255, 146, 0);
  content: "\e60b";
}

.icon-iconstar-empty::before {
  color: rgb(233, 233, 233);
  content: "\e60b";
}

.icon-iconstar-half::before {
  color: rgb(255, 146, 0);
  content: "\e7b3";
}

.icon-loc::before {
  content: "\e600";
}

.icon-right::before {
  content: "\e60c";
  color: #888;
  font-weight: bold;
}

.icon-unfork::before {
  color: rgb(209, 209, 209);
  font-size: 24px !important;
  content: "\e82b";
}

.icon-fork::before {
  color: rgb(235, 77, 77);
  font-size: 24px !important;
  content: "\e82b";
}

.card2 {
  margin: 8px;
  height: 200rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffff;
  box-shadow: 2px 1px 1px #ccc;
}

.card2 .spot-image {
  margin: 5px;
  width: 200rpx;
  height: 92%;
  border-radius: 10rpx 0 0 10rpx;
  flex-shrink: 0; /* 不被压缩 */
}

.card2 .right {
  margin: 10rpx 14rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}

.card2 .right .row {
  display: flex;
  flex-direction: row;
  font-size: 11px;
  color: #353535;
}

.card2 .right .row .title {
  font-size: 13px;
  font-weight: bold;
}

.card2 .right .row .end {
  font-size: 11px;
  margin-left: auto;
  text-align: right;
  color: #888;
}

.card2 .right .row .state {
  font-size: 11px;
  margin-left: auto;
  text-align: right;
  color: #f4c23c;
}

.card2 .right .description {
  text-align: left;
  font-size: 11px;
  color: #888;
}

.card2 .right .row .score {
  margin-left: 4px;
  color: #f4c23c;
  font-weight: bold;
}

.icon-more::before {
  content: "\e670";
}

.right-item {
  display: none;
}

.active {
  display: flex;
}

.btn {
  margin-top: 8px;
  background-color: #f4c23c;
  width: 95%;
  font-size: 15px;
  color: white;
  display: flex;
  justify-content: center;
}
